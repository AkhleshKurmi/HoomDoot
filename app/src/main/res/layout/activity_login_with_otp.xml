<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backotp"
    tools:context=".activities.LoginActivity"
    android:padding="16dp">


    <!-- Username Input with improved style -->
    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        android:background="@drawable/rounded_edit_text"

        android:hint="Enter Mobile No."
        android:textStyle="bold"
        android:textColorHint="@color/black"

        android:inputType="textPersonName"
        android:layout_marginTop="85dp"
        android:padding="12dp"
        android:textSize="18sp" />

    <!-- Password Input with improved style -->


    <!-- User/Vendor Dropdown -->


    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Varification code"
        android:layout_marginTop="24dp"
        android:backgroundTintMode="add"
        android:layout_marginRight="50dp"
        android:backgroundTint="#CDCBCB"
        android:layout_marginLeft="50dp"
        android:textColor="#625F5F" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"

        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:text="skip"

        android:textColor="@color/black" />


</LinearLayout>