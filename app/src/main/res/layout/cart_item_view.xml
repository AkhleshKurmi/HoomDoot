<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:background="#F5F5F5"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/acrepairing" /> <!-- Replace with actual image -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/text_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textColor="#666666"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_product_orignal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5999.0"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_product_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ₹3999.0"
                android:layout_marginLeft="20dp"
                android:textColor="#FF0000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_product_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹19995.0"
                android:textSize="14sp"
                android:textColor="#3F51B5" />
            <TextView
                android:id="@+id/text_product_total"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="5"
                android:layout_marginLeft="50dp"
                android:textSize="14sp"
                 />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_delete_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
          android:src="@drawable/baseline_delete_24"
            android:layout_margin="8dp"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/updateProduct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:src="@drawable/outline_add_24"/>
    </LinearLayout>
</LinearLayout>
