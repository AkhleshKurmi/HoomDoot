<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <!-- Radio Button to select address -->
    <RadioButton
        android:id="@+id/radio_button_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#6B43FB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Address Title -->
    <TextView
        android:id="@+id/tv_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/radio_button_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_address_details"/>

    <!-- Address Details -->
    <TextView
        android:id="@+id/tv_address_details"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Shop 16, Dadar West, Mumbai, Maharashtra 400028, India"
        android:textSize="14sp"
        android:textColor="#7A7A7A"
        app:layout_constraintStart_toStartOf="@id/tv_address_title"
        app:layout_constraintTop_toBottomOf="@id/tv_address_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>