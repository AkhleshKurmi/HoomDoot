<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Close Icon or Back Arrow (Optional) -->

    <!-- Address Heading -->
    <TextView
        android:id="@+id/addressHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home -  "
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/baseline_home_24"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Address Content -->
    <TextView
        android:id="@+id/addressContent"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:text="A95, Vimal Sadan Society, RHO I"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/addressHeading"/>

    <!-- Edit Address Icon -->
    <ImageView
        android:id="@+id/editAddressIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/addressContent"
        app:layout_constraintBottom_toBottomOf="@id/addressContent"
        android:contentDescription="Edit Address" />

    <!-- Date and Time Heading -->
    <TextView
        android:id="@+id/dateTimeHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time - "
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/baseline_punch_clock_24"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/addressContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Date and Time Content -->
    <TextView
        android:id="@+id/dateTimeContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Sun, Oct 13 - 05:00 PM"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dateTimeHeading"

        app:layout_constraintTop_toBottomOf="@id/addressContent" />

    <!-- Edit Date and Time Icon -->
    <ImageView
        android:id="@+id/editDateTimeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dateTimeContent"
        app:layout_constraintBottom_toBottomOf="@id/dateTimeContent"
        android:contentDescription="Edit Date and Time" />

    <!-- Proceed to Pay Button -->
    <Button
        android:id="@+id/proceedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Proceed to Pay"
        app:layout_constraintTop_toBottomOf="@id/dateTimeContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
