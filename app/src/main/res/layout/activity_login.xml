<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activities.LoginActivity"
    android:padding="16dp">

    <!-- Logo or Banner Image -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:src="@drawable/homedot"
        android:layout_gravity="center" />

    <!-- Username Input with improved style -->
    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Password Input with improved style -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textColorHint="#757575"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- User/Vendor Dropdown -->


    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="24dp"
        android:backgroundTintMode="add"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_back"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

    <!-- Forgot Password Text -->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?        "
        android:textColor="@color/btn"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true" />

    <!-- Not Registered? Sign Up Text -->
    <TextView
        android:id="@+id/not_registered_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Registered? Sign Up"
        android:textColor="#08880D"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:id="@+id/loginOtp"
        android:gravity="center"
        android:text="Login with OTP"/>

</LinearLayout>